---
import { PropertyStates } from '@lib/enums';
import { formatUSDCurrency } from '@lib/utils';

interface Props {
  propertyState: string;
  propertyPrice: {
    fee: number;
    total: number;
  }
}

const { propertyState, propertyPrice } = Astro.props;
---

<div class="mb-1 flex flex-col">
  <p class="font-light capitalize text-xs leading-[8px]">
    {propertyState === PropertyStates.rent ? "Cuota" : "Costo total"}
  </p>
  <p class="text-2xl font-light">
    {
      formatUSDCurrency(
        propertyState === PropertyStates.rent
          ? propertyPrice.fee
          : propertyPrice.total,
      )
    }
  </p>
</div>
