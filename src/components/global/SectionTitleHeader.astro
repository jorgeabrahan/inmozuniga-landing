---
interface Props {
  subtitle: string;
}

const { subtitle } = Astro.props;
---

<header class="text-center mb-6">
  <h2 class="text-3xl md:text-4xl font-bold capitalize">
    <slot />
  </h2>
  <p class="text-black-600/80 text-sm md:text-lg max-w-[800px] mx-auto">
    {subtitle}
  </p>
</header>
