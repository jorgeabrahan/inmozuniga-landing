---
import ArrowRightCircleSolidIcon from "@icons/ArrowRightCircleSolidIcon.astro";

interface Props {
  url: string;
  target?: string;
  rel?: string;
  text: string;
  className?: string;
}

const { url, target = "_self", rel, text, className } = Astro.props;
---

<a
  class={`text-sm flex items-center gap-2 w-max relative group pl-2 pr-4 py-2 transition-colors duration-300 rounded-full overflow-hidden ${className}`}
  href={url}
  target={target}
  rel={rel}
>
  <ArrowRightCircleSolidIcon
    className="text-harvest-gold-700 z-10 group-hover:text-white group-hover:-rotate-45 transition-[color,transform] duration-[300ms,500ms]"
  />
  <span
    class="z-10 font-semibold group-hover:text-white transition-colors duration-300"
  >
    {text}
  </span>
  <div
    class="absolute top-0 left-0 w-0 h-full bg-harvest-gold-700 transition-[width] duration-300 ease-in-out group-hover:w-full rounded-full z-0"
  >
  </div>
</a>
