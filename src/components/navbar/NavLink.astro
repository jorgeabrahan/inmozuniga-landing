---
interface Props {
    url: string;
    text: string;
}
const { url, text } = Astro.props;
const { pathname } = Astro.url;
---

<a
    href={url}
    class={`relative block w-[80%] md:w-full mx-auto py-2 overflow-hidden text-right md:text-center text-2xl md:text-lg transition-colors duration-300 hover:text-harvest-gold-600 md:hover:text-harvest-gold-800 after:content-[''] after:absolute after:left-0 after:bottom-0 after:z-100 after:bg-harvest-gold after:h-[3px] after:w-full after:origin-right md:after:origin-center after:rounded-lg after:scale-x-[0.20] md:after:scale-x-[0.30] hover:after:scale-x-75 after:transition-[transform,width] after:duration-300 after:ease-out ${pathname === url && "text-harvest-gold-600 md:text-harvest-gold-800 font-semibold"}`}
>
    {text}
</a>
