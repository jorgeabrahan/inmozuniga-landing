---
import Navbar from "../components/navbar/Navbar.astro";
import Footer from "../components/footer/Footer.astro";
import "../styles/input.css";
interface Props {
    title: string;
    description: string;
    keywords: string;
}

const { title, description, keywords } = Astro.props;

const url = Astro.request.url;
const companyName = "Inmobiliaria Zúniga y Asoc.";
---

<!doctype html>
<html lang="es" dir="ltr">
    <head>
        <meta charset="UTF-8" />

        <meta name="author" content="Jorge" />
        <meta name="copyright" content="Jorge" />
        <meta name="robots" content="index,follow" />
        <meta name="description" content={description} />
        <meta name="keywords" content={keywords} />

        <meta property="og:type" content="website" />
        <meta property="og:title" content={companyName} />
        <meta property="og:url" content={url} />
        <meta property="og:image" content="/assets/images/logo/golden.png" />
        <meta property="og:description" content={description} />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={companyName} />
        <meta name="twitter:site" content="@InmobiliariaZuniga" />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content="/assets/images/logo/golden.png" />
        <meta
            name="twitter:image:alt"
            content="Logo dorado de Inmobiliaria Zúniga y Asoc."
        />

        <link rel="canonical" href={url} />
        <link rel="icon" href="/assets/images/logo/golden.png" />

        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <!-- Google Analytics -->
        <script
            is:inline
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-39R41BL039"
        ></script>
        <script is:inline>
            if (typeof window !== "undefined") {
                window.dataLayer = window.dataLayer || [];

                function gtag() {
                    dataLayer.push(arguments);
                }
                gtag("js", new Date());

                gtag("config", "G-39R41BL039");
            }
        </script>
    </head>
    <body>
        <Navbar />
        <slot />
        <Footer />
    </body>
    <script src="../lib/observers/unscaleImagesObserver.ts"></script>
</html>
